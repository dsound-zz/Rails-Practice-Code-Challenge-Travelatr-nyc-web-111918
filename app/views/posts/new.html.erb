<h1>Create a post</h1>

<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<% end %>


<div>
<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :content %>
<%= f.text_area :content %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name, prompt: true %><br>
<%= f.collection_select :destination_id, Destination.all, :id, :name_country, prompt: true %>
<%= f.submit %>
<% end %>
</div>
