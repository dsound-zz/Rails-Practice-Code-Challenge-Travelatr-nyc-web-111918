<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Create a blogger!</h1>

      <% if @blogger.errors.any? %>
      <% @blogger.errors.full_messages.each do |message|  %>
    <h5>  <%= message %> </h5>
      <% end %>
      <% end %>



  <%= form_for @blogger, :html => {class:'row', class:'large-3 column'} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, reequired: true %>
  <%= f.label :bio  %>
  <%= f.text_area :bio, required: true %>
  <%= f.label :age  %>
  <%= f.text_field :age, required: true %>
  <%= f.submit %>
  <% end %>



  </body>
  </html>
